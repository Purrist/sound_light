    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Run Sound Light App",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "api.app",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger", // Use VS Code's debugger, not Flask's
                "--no-reload",   // Let VS Code handle reloading
                "--host=0.0.0.0",
                "--port=5000"
            ],
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal"
        }
    ]
}